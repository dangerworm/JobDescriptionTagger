@model JobDescriptionTagger.Models.TagsModel
@{
    ViewBag.Title = "Tags";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>List of Tags</h4>
            </div>
            <div class="panel-body">
                <p>
                    These are all the tags in the database which aren't marked as being ignored;
                    words such as 'and', 'the', 'me', etc. can be ignored so that we just focus on useful terms.
                </p>
            </div>
        </div>
    </div>
</div>

@if (!Model.Tags.Any())
{
    <div class="row">
        <div class="col-md-12">
            No records returned.
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Single-Word Tags</h4>
                </div>
                <div class="panel-body">
                    @Html.Partial("_TagsTable", Model.Tags)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Two-Word Tags (Pairs)</h4>
                </div>
                <div class="panel-body">
                    @Html.Partial("_TagsTable", Model.Pairs)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Three-Word Tags (Triplets)</h4>
                </div>
                <div class="panel-body">
                    @Html.Partial("_TagsTable", Model.Triplets)
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script language="javascript" type="text/javascript">
        $('table').DataTable({
            "order": [[ 2, "desc" ]],
            "scrollY": '42vh',
            "scrollCollapse": true,
            "searching": false,
            "paging": false
        });
    </script>
}